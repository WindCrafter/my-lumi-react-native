{
  "testRunner": "mocha",
  "runnerConfig": "e2e/.mocharc.json",
  "configurations": {
    "ios": {
      "type": "ios.simulator",
      "binaryPath": "./ios/build/Build/Products/Debug-iphonesimulator/LumiHR.app",
      "build": "xcodebuild -workspace ios/LumiHR.xcworkspace -configuration Debug -scheme LumiHR -sdk iphonesimulator -derivedDataPath ios/build",
      "device": {
        "type": "iPhone 11"
      }
    },
    "android": {
      "type": "android.emulator",
      "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
      "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
      "device": {
        "avdName": "Pixel_3_API_29"
      }
    }
  }
}